<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colegio San José</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Expedientes" asp-action="Index">Colegio San José</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Alumnoes" asp-action="Index">Alumnos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Materias" asp-action="Index">Materias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Expedientes" asp-action="Index">Expedientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Expedientes" asp-action="Promedios">Promedios</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center mt-5 p-3 border-top">
        <p class="mb-0">Colegio San José © @DateTime.Now.Year</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
